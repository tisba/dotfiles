#!/bin/bash

set -e

echo "=== Homebrew Updates"
brew upgrade
brew upgrade --cask

echo "=== Homebrew Cleanup"
brew_cache=$(brew --cache)
# -s is for scrubbing the cache
brew cleanup -s --verbose && rm -rf "${brew_cache:?}"/*

echo "=== brew doctor"
brew doctor

echo "=== RVM cleanup"
rvm get head
rvm cleanup all

echo "=== Golang cache cleanup"
go clean --modcache --cache

echo "=== Updating OMZ"
$ZSH/tools/upgrade.sh
