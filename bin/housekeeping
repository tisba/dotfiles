#!/bin/bash

set -e

echo "=== Homebrew Updates"
brew upgrade
brew cask upgrade

echo "=== Homebrew Cleanup"
brew_cache=$(brew --cache)
# -s is for scubbing the cache
brew cleanup -s --verbose && rm -rf "${brew_cache:?}"/*

echo "=== brew {,cask} doctor"
brew doctor
brew cask doctor

echo "=== RVM Cleanup"
rvm get stable
rvm cleanup all
