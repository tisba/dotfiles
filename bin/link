#!/usr/bin/env bash

if [ -z "$PS1" ]; then
  echo -e "${COLOR_RED}You should source this, not run it, for example: source link${COLOR_NC}\n\n"
fi

# aws
ln -nfs $DOTFILES/secrets/aws_credentials ~/.aws/credentials

# irb & gem
ln -nfs $DOTFILES/etc/irbrc ~/.irbrc
ln -nfs $DOTFILES/etc/caprc ~/.caprc
ln -nfs $DOTFILES/etc/rspec ~/.rspec

ln -nfs $DOTFILES/etc/rdebugrc ~/.rdebugrc
ln -nfs $DOTFILES/etc/gemrc ~/.gemrc

# JSlint
ln -nfs $DOTFILES/etc/jsl.conf ~/.jsl.conf

# vim
ln -nfs $DOTFILES/etc/vimrc ~/.vimrc
ln -nfs $DOTFILES/etc/gvimrc ~/.gvimrc
ln -nfs $DOTFILES/etc/vim ~/.vim

# git
ln -nfs $DOTFILES/etc/gitconfig ~/.gitconfig
ln -nfs $DOTFILES/etc/gitignore ~/.gitignore

# misc
touch ~/.hushlogin
